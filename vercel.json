{
    "version": 2,
    "builds": [
      {
        "src": "app/main.py",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "50mb",
          "runtime": "python3.9",
          "installCommand": "pip install --no-cache-dir -r requirements-vercel.txt"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "app/main.py"
      }
    ],
    "functions": {
      "app/main.py": {
        "maxDuration": 60,
        "memory": 3008
      }
    },
    "env": {
      "MODEL_CACHE": "./model_files",
      "DEVICE": "cpu",
      "TORCH_HOME": "/tmp/torch_cache",
      "TRANSFORMERS_CACHE": "/tmp/transformers_cache",
      "HF_HOME": "/tmp/huggingface_cache"
    }
  }